<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/fab_margin">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Manage Friends"
        android:layout_gravity="center"
        android:textColor="#2C3646"
        android:textStyle="bold"
        style="@style/TitleTextView"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <SearchView
            android:id="@+id/searchFriendsView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true">
        </SearchView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="ok"
            android:textStyle="bold"
            android:background="@drawable/round"
            android:textColor="#CBD1DC"
            android:gravity="center"
            android:layout_gravity="center"/>

    </LinearLayout>
    <ListView
        android:id="@+id/friendslistview"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:divider="#00000000"
        style="@style/RoundConnerTextView">
    </ListView>
    <Button
        android:id="@+id/ViewPendingRequestsBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="View Pending Requests"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@drawable/round"
        android:textColor="#CBD1DC" />
</LinearLayout>
