<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shuangliang.safetrip.ViewAllPostActivity"
    tools:showIn="@layout/ui_view_all_post_activity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="260dp"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/View_All_Post_AllPostLabel"
            android:id="@+id/ViewALLPost_AllPosts"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/ViewAllPost_AllPostList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#d1fbf8"></ListView>


</LinearLayout>
