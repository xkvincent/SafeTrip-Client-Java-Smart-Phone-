<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/Userpage_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#2C3646"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="80dp">
            <TextView
                android:id="@+id/Welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Welcome ! "
                android:layout_weight="1"
                android:textSize="40dp"
                android:textColor="#2C3646"
                android:gravity="right"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/userPage_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:textColor="#2C3646"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_weight="1"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/userPage_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">


            <Button
                android:id="@+id/userPage_myProfile"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/MyProfile"
                android:textStyle="bold"
                android:background="@drawable/round"
                android:textColor="#CBD1DC"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="14dp"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/userPage_post"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/ManagePost"
                android:textStyle="bold"
                android:background="@drawable/round"
                android:textColor="#CBD1DC"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="14dp"
                android:layout_marginTop="15dp"/>

            <Button
                android:id="@+id/userPage_friends"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/ManageFriends"
                android:textStyle="bold"
                android:background="@drawable/round"
                android:textColor="#CBD1DC"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="14dp"
                android:layout_marginTop="15dp"/>

           <Button
                android:id="@+id/userPage_admin"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/Admin"
                android:textStyle="bold"
                android:background="@drawable/round"
                android:textColor="#CBD1DC"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="14dp"
                android:layout_marginTop="15dp"/>
            <Button
                android:id="@+id/userPage_location"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/ShareLocation"
                android:textStyle="bold"
                android:background="@drawable/round"
                android:textColor="#CBD1DC"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="14dp"
                android:layout_marginTop="15dp"/>

            <Button
                android:id="@+id/userPage_track"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/Track_Location"
                android:textStyle="bold"
                android:background="@drawable/round"
                android:textColor="#CBD1DC"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="14dp"
                android:layout_marginTop="15dp"/>
        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
